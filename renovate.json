{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm",
        "github-actions"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchManagers": [
        "npm",
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "docusaurus.config.ts"
      ],
      "matchStrings": [
        "We just released (?<currentValue>v[0-9.]*) of our Open Source Kubernetes Package Manager"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "docker",
      "depNameTemplate": "glasskube/glasskube"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "src/partials/_install.mdx",
        "src/partials/_upgrade.mdx"
      ],
      "matchStrings": [
        "releases.dl.glasskube.dev/glasskube_(?<currentValue>v[0-9.]*)_"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "docker",
      "depNameTemplate": "glasskube/glasskube"
    }
  ]
}
